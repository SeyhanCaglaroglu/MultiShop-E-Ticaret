@model List<ResultCargoCompanyDto>
@{
    ViewData["Title"] = "Kargo Firmaları Listesi";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="row">

        <div class="card">
            <div class="card-body">
                <div class="mt-4 my-5">
                    <a href="/Admin/Cargo/CreateCargoCompany" class="btn btn-outline-primary">Yeni Kargo Firması Girişi</a>
                </div>

                <!-- Başlıklar -->
                <div class="row fw-bold border-bottom">
                    <div class="col-1 d-flex justify-content-center align-items-center">#</div>
                    <div class="col-9 d-flex justify-content-center align-items-center">Firma Adı</div>
                    <div class="col-1 d-flex justify-content-center align-items-center">Sil</div>
                    <div class="col-1 d-flex justify-content-center align-items-center">Güncelle</div>
                </div>

                <!-- Tablo İçeriği -->
                <div>
                    @foreach (var item in Model)
                    {
                        count++;
                        <div class="row border-bottom py-2">
                            <div class="col-1 d-flex justify-content-center align-items-center">@count</div>
                            <div class="col-9 d-flex justify-content-center align-items-center">@item.CargoCompanyName</div>
                            <div class="col-1 d-flex justify-content-center align-items-center">
                                <a href="/Admin/Cargo/DeleteCargoCompany/@item.CargoCompanyId">
                                    <i class="bi bi-trash fs-4 text-danger"></i>
                                </a>
                            </div>
                            <div class="col-1 d-flex justify-content-center align-items-center">
                                <a href="/Admin/Cargo/UpdateCargoCompany/@item.CargoCompanyId">
                                    <i class="bi bi-pencil-square fs-4 text-success"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>

    </div>
</section>

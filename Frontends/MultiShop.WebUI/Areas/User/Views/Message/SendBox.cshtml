@model List<ResultSendBoxMessageDto>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Gonderilen Mesajlar</h4>
                        <a href="/User/Message/SendMessage" class="btn btn-primary">
                            <i class="mdi mdi-plus-circle"></i> Yeni Mesaj Ekle
                        </a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th style="font-weight: bold; text-align: center;">#</th>
                                        <th style="font-weight: bold; text-align: center;">Konu</th>
                                        <th style="font-weight: bold; text-align: center;">Tarih</th>
                                        <th style="font-weight: bold; text-align: center;">Durum</th>
                                        <th style="font-weight: bold; text-align: center;">Sil</th>
                                        <th style="font-weight: bold; text-align: center;">Mesajı Aç</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th style="text-align: center; font-size: 18px;">@count</th>
                                            
                                            <td style="text-align: center; font-size: 18px;">
                                                @item.Subject
                                            </td>
                                            <td style="text-align: center; font-size: 18px;">
                                                @item.MessageDate.ToString("dd-MM-yyyy")
                                            </td>
                                            <td style="text-align: center; font-size: 18px;">
                                                @item.IsRead
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                <a href="/User/Message/DeleteSendBox/@item.UserMessageId">
                                                    <i class="mdi mdi-delete" style="font-size: 30px;"></i>
                                                </a>
                                            </td>
                                            <td style="text-align: center; vertical-align: middle;">
                                                <a href="/User/Message/DetailSendBox/@item.UserMessageId">
                                                    <i class="mdi mdi-eye" style="font-size: 30px;"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- content-wrapper ends -->

</div>


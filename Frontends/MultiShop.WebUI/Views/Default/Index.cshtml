@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

@if (TempData["SaleSuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        @TempData["SaleSuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Anasayfa</a>
                <span class="breadcrumb-item active">Ürün Listesi</span>
            </nav>
        </div>
    </div>
</div>

@await Component.InvokeAsync("_CarouselDefaultComponentPartial")

@await Component.InvokeAsync("_FeatureDefaultComponentPartial")

@await Component.InvokeAsync("_CategoriesDefaultComponentPartial")

@await Component.InvokeAsync("_FeatureProductsComponentPartial")

@await Component.InvokeAsync("_OfferDiscountComponentPartial")

@await Component.InvokeAsync("_VendorDefaultComponentPartial")

<!-- Bootstrap 5 JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

@model CreateAdressDto
<div class="col-lg-8">
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Adres Bİlgİlerİ</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="row">
            <div class="col-md-6 form-group">
                <label>Ad</label>
                <input class="form-control" type="text" asp-for="Name" placeholder="Ad">
            </div>
            <div class="col-md-6 form-group">
                <label>Soyad</label>
                <input class="form-control" type="text" asp-for="Surname" placeholder="Soyad">
            </div>
            <div class="col-md-6 form-group">
                <label>Email</label>
                <input class="form-control" type="text" asp-for="Email" placeholder="ornek@gmail.com">
            </div>
            <div class="col-md-6 form-group">
                <label>Telefon Numarası</label>
                <input class="form-control" type="text" asp-for="Phone" placeholder="+90 500 400 300">
            </div>
            <div class="col-md-6 form-group">
                <label>Mahalle</label>
                <input class="form-control" type="text" asp-for="Detail1" placeholder="123 Mahallesi">
            </div>
            <div class="col-md-6 form-group">
                <label>Sokak</label>
                <input class="form-control" type="text" asp-for="Detail2" placeholder="123 Sokak">
            </div>
            <div class="col-md-6 form-group">
                <label>Ülke</label>
                <input class="form-control" type="text" asp-for="Country" placeholder="Ülke">
            </div>
            <div class="col-md-6 form-group">
                <label>Şehir</label>
                <input class="form-control" type="text" asp-for="City" placeholder="Şehir">
            </div>
            <div class="col-md-6 form-group">
                <label>İlçe</label>
                <input class="form-control" type="text" asp-for="District" placeholder="İlçe">
            </div>
            <div class="col-md-6 form-group">
                <label>Posta Kodu</label>
                <input class="form-control" type="text" asp-for="ZipCode" placeholder="15/6">
            </div>

        </div>
    </div>

</div>
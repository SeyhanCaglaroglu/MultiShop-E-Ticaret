
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Anasayfa</a>
                <a class="breadcrumb-item text-dark" href="#">Ürün Listesi</a>
                <span class="breadcrumb-item active">Ürün Detayları</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Shop Detail Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        @await Component.InvokeAsync("_ImageSliderProductDetailComponentPartial",new {id=ViewBag.ProductId})

        @await Component.InvokeAsync("_FeatureProductDetailComponentPartial", new { id = ViewBag.ProductId, number = ViewBag.discountRate, commentCount = ViewBag.commentCount, roundedAverageRaiting = ViewBag.roundedAverageRaiting })
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Açıklamalar</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Ürün Bilgileri</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Yorumlar</a>
                </div>
                <div class="tab-content">
                    @await Component.InvokeAsync("_DescriptionProductDetailComponentPartial",new {id=ViewBag.ProductId})
                    @await Component.InvokeAsync("_InformationProductDetailComponentPartial",new {id=ViewBag.ProductId})
                    @await Component.InvokeAsync("_ReviewProductDetailComponentPartial", new { id = ViewBag.ProductId })
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shop Detail End -->



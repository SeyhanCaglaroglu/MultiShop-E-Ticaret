
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Anasayfa</a>
                <a class="breadcrumb-item text-dark" href="#">Ürünler</a>
                <span class="breadcrumb-item active">Sepetim</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        @await Component.InvokeAsync("_ProductListShoppingCartComponentPartial")
        @* @await Component.InvokeAsync("_DiscountShoppingCartComponentPartial") *@
        @await Html.PartialAsync("~/Views/Discount/ConfirmDiscountCoupon.cshtml", new { TotalPrice = ViewBag.TotalPrice, Tax = ViewBag.Tax, Rate = ViewBag.Rate, DiscountPrice = ViewBag.DiscountPrice, TotalPriceWithTax = ViewBag.TotalPriceWithTax })
    </div>
</div>
<!-- Cart End -->

